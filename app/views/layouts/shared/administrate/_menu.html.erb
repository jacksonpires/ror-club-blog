<aside class="admin-nav" id="adminMenu">
  <div class="row row-menu-button">
    <%= button_to destroy_admin_session_path, method: :delete, data: { turbo: false }, remote: false, class:"logout" do %>
      <%= image_tag "icons/white/exit.svg", alt:"exit" %>
    <% end %>

    <a href="#" id="adminMenuButton">
      <%= image_tag "icons/white/menu.svg", alt:"menu" %>
    </a>
  </div>
  <div class="row center">
    <%= link_to administrate_path, class:"logo" do %>
      <%= image_tag "logo.svg", alt:"logo" %>
    <% end %>
  </div>
  <div class="row center column">
    <h3 class="user-name"><%= current_admin.name %></h3>
    <h4 class="user-email"><%= current_admin.email %></h4>
  </div>
  <div class="row">
    <nav class="menu">
      <%= link_to administrate_posts_path, class: active_link?("administrate/posts") do %>
        <div class="icon">
          <%= image_tag "icons/white/posts.svg", alt:"posts" %>
        </div>
        <label for="#">Posts</label>
      <% end %>

      <%= link_to administrate_authors_path, class: active_link?("administrate/authors") do %>
        <div class="icon">
          <%= image_tag "icons/white/authors.svg", alt:"authors" %>
        </div>
        <label for="#">Autores</label>
      <% end %>

      <%= link_to administrate_categories_path, class: active_link?("administrate/categories") do %>
        <div class="icon">
          <%= image_tag "icons/white/categories.svg", alt:"categorias" %>
        </div>
        <label for="#">Categorias</label>
      <% end %>
    </nav>
  </div>
</aside>
