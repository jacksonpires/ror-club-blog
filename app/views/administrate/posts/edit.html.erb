<h1 class="admin-title">
  <%= link_to "Posts", administrate_posts_path %>
</h1>
<div class="main-content">
  <div class="row">
    <h2 class="admin-subtitle">Edição de Post</h2>
    <div class="buttons">
      <a href="#" class="button small" onclick="document.forms['post-form'].submit()">
        <%= image_tag "icons/white/save.svg" %>
        Salvar post
      </a>
    </div>
  </div>

  <%= render "form", post: @post, action: :edit %>

</div>
