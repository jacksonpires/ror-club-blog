<h1 class="admin-title">Posts</h1>
<div class="main-content">
  <div class="row">
    <h2 class="admin-subtitle">Listagem de posts</h2>
    <div class="buttons">
      <%= link_to new_administrate_post_path, class:"button small" do %>
        <%= image_tag "icons/white/add.svg", alt:"add" %>
        Adicionar novo post
      <% end %>
    </div>
  </div>
  <div class="row">
    <table class="table">
      <thead>
        <tr>
          <th>Data</th>
          <th>Categoria</th>
          <th>Nome</th>
          <th>Ações</th>
        </tr>
      </thead>
      <tbody>
        <% @posts.each do |post| %>
          <%= render post %>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
