<tr>
  <td><%= category.name %></td>
  <td>
    <div class="icons">
      <%= link_to edit_administrate_category_path(category), title:"Editar" do %>
        <%= image_tag "icons/gray/edit.svg" %>
      <% end %>

      <%= link_to [:administrate, category], title:"Visualizar" do %>
        <%= image_tag "icons/gray/eye.svg" %>
      <% end %>

      <%= button_to [:administrate, category], title:"Apagar categoria", data: { turbo: false }, method: :delete, class: "button-transparent" do %>
        <%= image_tag "icons/gray/close.svg" %>
      <% end %>
    </div>
  </td>
</tr>
